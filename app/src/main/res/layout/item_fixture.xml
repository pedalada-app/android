<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="4dp">

    <TextView
        android:id="@+id/item_fixture_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        tools:text="HI hello"/>


    <View
        style="@style/comp_fixture_line"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_fixture_hometeam_wrapper"
            style="@style/item_fixture_team_wrapper">

            <TextView
                android:id="@+id/item_fixture_hometeam"
                style="@style/item_fixture_team_name"
                tools:text="Chelsea"/>

            <TextView
                android:id="@+id/item_fixture_hometeam_odds"
                style="@style/item_fixture_team_odd"
                tools:text="(1.3)"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_fixture_draw_wrapper"
            style="@style/item_fixture_team_wrapper">

            <TextView
                android:id="@+id/item_fixture_draw"
                style="@style/item_fixture_team_name"
                android:text="@string/draw"/>


            <TextView
                android:id="@+id/item_fixture_draw_odds"
                style="@style/item_fixture_team_odd"
                tools:text="(1.3)"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_fixture_away_wrapper"
            style="@style/item_fixture_team_wrapper"
            >

            <TextView
                android:id="@+id/item_fixture_awayteam"
                style="@style/item_fixture_team_name"
                tools:text="Chelsea"/>

            <TextView
                android:id="@+id/item_fixture_awayteam_odds"
                style="@style/item_fixture_team_odd"
                tools:text="(1.3)"/>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/comp_fixture_line"/>

</LinearLayout>